<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:text="MY HOME IOT "
        android:textSize="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="245dp"
        android:layout_height="457dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="136dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="129dp"
            android:layout_height="116dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:onClick="ledActivity"
            app:srcCompat="@mipmap/ic_lightbulb_outline_black_48dp" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="129dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:onClick="DoorActivity"
            app:srcCompat="@mipmap/ic_vpn_key_black_48dp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="126dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:onClick="TemphumiActivity"
            app:srcCompat="@mipmap/ic_opacity_black_48dp" />

        <ImageButton
            android:id="@+id/camera_btn"
            android:layout_width="126dp"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            app:srcCompat="@mipmap/ic_camera_alt_black_48dp"
            android:onClick="CameraActivity"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>